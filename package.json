{
    "name": "sonarlint-vscode",
    "displayName": "SonarLint for Visual Studio Code",
    "description": "Provide static analysis for many languages",
    "version": "0.0.1",
    "icon": "icon.png",
    "publisher": "SonarSource",
    "repository": {
        "type": "git",
        "url": "https://github.com/SonarSource/sonarlint-vscode.git"
    },
    "license": "LGPL-3.0",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Languages",
        "Linters"
    ],
    "keywords": [
        "SonarLint"
    ],
    "activationEvents": [
        "onLanguage:javascript",
		"onLanguage:typescriptreact",
        "onCommand:sonarlint.createConfig"
    ],
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "SonarLint",
            "properties": {
                "sonarlint.testFilePattern": {
                    "type": ["string", "null"],
                    "default": ".*[tT]est.*",
                    "description": "Files whose name match this regexp pattern are considered as test files"
                },
                "sonarlint.servers": {
                    "type": ["array", "null"],
                    "items": [
                        {
                            "title": "SonarQube server connection",
                            "type": "object",
                            "properties": {
                                "id": {"description": "Unique identifier of the server connection. Will be referred in 'sonarlint.json' of your project", "type": "string"},
                                "url": {"description": "URL to the SonarQube server", "type": "string"},
                                "organization": {"description": "Organization key (if applicable)", "type": "string"},
                                "token": {"description": "Authentication token", "type": "string"}
                            },
                            "additionalProperties": false,
                            "required": ["id", "url"]
                        }
                    ],
                    "default": [ {
                        "id": "sonarqube.com",
                        "url": "https://sonarqube.com",
                        "organization": "",
                        "token": ""
                    } ],
                    "description": "Servers connection details. Server id can later be referred from 'sonarlint.json' file in your project."
                }
            }
        },
        "commands": [
            {
				"title": "Create a 'sonarlint.json' file",
				"category": "SonarLint",
				"command": "sonarlint.createConfig"
			}
        ]
    },
    "main": "./out/src/extension",
    "files": [
        "lib/sonarlint-server.jar"
    ],
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "portfinder": "^1.0.13",
        "vscode-languageclient": "3.2.2",
        "open": "0.0.5"
    },
    "devDependencies": {
        "typescript": "^2.2.1",
        "vscode": "^1.1.0",
        "mocha": "^2.4.5",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}